<launch>
    <param name="/robot_names" value="c1,c2,c3,b" />
    <param name="/use_sim_time" value="true" />

    <!-- To be sure other tests using ignition transport won't influence. -->
    <env name="IGN_PARTITION" value="$(anon ign_partition)" />

    <!--
    These helper nodes will be restarted for each <test> tag, which is desired
    to keep the tests independent. rostest will also make sure the <test> nodes
    are executed serially, so no need for a different IGN_PARTITION for each
    of them.
    -->
    <node pkg="subt_ros" type="test_broker" name="test_broker" output="screen" />
    <node pkg="subt_ros" type="subt_ros_relay" name="relay" output="screen" />

    <test test-name="comms_relay_unicast" pkg="subt_ros" type="test_comms_client_unicast" />
    <test test-name="comms_relay_multicast" pkg="subt_ros" type="test_comms_client_multicast" />
    <test test-name="comms_relay_broadcast" pkg="subt_ros" type="test_comms_client_broadcast" />
</launch>